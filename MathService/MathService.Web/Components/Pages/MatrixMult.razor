@page "/matrix-multiplication"

@rendermode InteractiveServer

@inject IJSRuntime JsRuntime

<PageTitle>Multiplication</PageTitle>

<div class="container">
    <h2>Matrix Multiplication</h2>
    <div class="row">
        <div class="col-md-6">
            <h4>Matrix A</h4>
            <div id="matrixA" class="matrix-container"></div>
            <div class="btn-group mt-2">
                <button id="increaseARows" class="btn btn-primary">Increase Rows</button>
                <button id="decreaseARows" class="btn btn-secondary">Decrease Rows</button>
                <button id="increaseACols" class="btn btn-primary">Increase Columns</button>
                <button id="decreaseACols" class="btn btn-secondary">Decrease Columns</button>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Matrix B</h4>
            <div id="matrixB" class="matrix-container"></div>
            <div class="btn-group mt-2">
                <button id="increaseBRows" class="btn btn-primary">Increase Rows</button>
                <button id="decreaseBRows" class="btn btn-secondary">Decrease Rows</button>
                <button id="increaseBCols" class="btn btn-primary">Increase Columns</button>
                <button id="decreaseBCols" class="btn btn-secondary">Decrease Columns</button>
            </div>
        </div>
    </div>
    <button id="submitMatrices" class="btn btn-success mt-4">Submit</button>
    <h4 class="mt-4">Result</h4>
    <div id="result" class="matrix-container"></div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="js/script.js"></script>

<script>
    initializeMatrixMultiplication = () => {
        console.log("Meow");
    };
</script>

@code {
    protected override async Task OnAfterRenderAsync(bool firstRender)
    {
        if (firstRender)
        {
            await JsRuntime.InvokeVoidAsync("initializeMatrixMultiplication");
        }
    }
}

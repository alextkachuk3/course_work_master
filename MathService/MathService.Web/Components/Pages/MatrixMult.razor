@page "/matrix-multiplication"

@rendermode InteractiveServer

@inject IJSRuntime JsRuntime

<PageTitle>Матричне множення</PageTitle>

<div class="container">
    <h2>Матричне множення</h2>
    <div class="row">
        <div class="col-md-6">
            <h4>Матриця A</h4>
            <div id="matrixA" class="matrix-container"></div>
            <div class="btn-group mt-2">
                <button id="increaseARows" class="btn btn-primary">Збільшити рядків</button>
                <button id="decreaseARows" class="btn btn-secondary">Зменшити рядків</button>
                <button id="increaseACols" class="btn btn-primary">Збільшити стовпчиків</button>
                <button id="decreaseACols" class="btn btn-secondary">Зменшити стовпчиків</button>
            </div>
        </div>
        <div class="col-md-6">
            <h4>Матриця B</h4>
            <div id="matrixB" class="matrix-container"></div>
            <div class="btn-group mt-2">
                <button id="increaseBRows" class="btn btn-primary">Збільшити рядків</button>
                <button id="decreaseBRows" class="btn btn-secondary">Зменшити рядків</button>
                <button id="increaseBCols" class="btn btn-primary">Збільшити стовпчиків</button>
                <button id="decreaseBCols" class="btn btn-secondary">Зменшити стовпчиків</button>
            </div>
        </div>
    </div>
    <button id="submitMatrices" class="btn btn-success mt-4">Обрахувати</button>
    <h4 class="mt-4">Результат</h4>
    <div id="result" class="matrix-container"></div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="js/script.js"></script>

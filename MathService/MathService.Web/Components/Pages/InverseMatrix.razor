@page "/inverse-matrix"

@rendermode InteractiveServer

@inject IJSRuntime JsRuntime

<PageTitle>Обернена матриця</PageTitle>

<div class="container">
    <h2>Обернена матриця</h2>
    <div class="row">
        <div class="col-md-12">
            <h4>Матриця</h4>
            <div id="matrix" class="matrix-container"></div>
            <div class="btn-group mt-2">
                <button id="increaseRows" class="btn btn-primary">Збільшити рядків</button>
                <button id="decreaseRows" class="btn btn-secondary">Зменшити рядків</button>
                <button id="increaseCols" class="btn btn-primary">Збільшити стовпчиків</button>
                <button id="decreaseCols" class="btn btn-secondary">Зменшити стовпчиків</button>
            </div>
        </div>
    </div>
    <button id="submitMatrix" class="btn btn-success mt-4">Обрахувати</button>
    <h4 class="mt-4">Результат</h4>
    <div id="result" class="matrix-container"></div>
</div>

<script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
<script src="js/inverse_matrix.js"></script>
